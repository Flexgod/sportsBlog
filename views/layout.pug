doctype html
html(lang="en")
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-social.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/jquery/jquery.min.js')
    script(src='/javascripts/popper/popper.min.js')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container-fluid
        a(href="/").navbar-brand SPORTS BLOG
        button(type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation").navbar-toggler
          span.navbar-toggler-icon
        .collapse.navbar-collapse(id="navbarResponsive")
          ul.navbar-nav.ml-auto
            li.nav-item.active
              a(href="/").nav-link Home
                span.sr-only (current)
            if user
                li.nav-item.dopdown
                   a.nav-link.dropdown-toogle(href="/account" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")= user.email
                   .dropdown-menu(aria-labelledby="dropdown01")
                     a.dropdown-item(href="#") Action
                     a.dropdown-item(href="#") Action
                     a.dropdown-item(href="#") Action
                li
                  a.nav-link(href="/logout") logout
    .container
      .row.text-center
        block messages
          if locals.flashes
            .col-lg-12.text-center
              .flash-messages
                - const categories = Object.keys(locals.flashes)
                each category in categories
                  each message in flashes[category]
                    .flash(class=`alert alert-${category}` role="alert")
                      p.flash__text!= message
                      button.flash__remove(onClick="this.parentElement.remove()") &times;
    .container
      .row
        block content

        block sidebar
          .col-md-4
            .card.my-4
              h5.card-header Search
              .card-body
                .input-group
                  form.form-control(action="/api/search" method="GET")
                    input(type="text" name="q" placeholder="Search for post...").form-control
                    span.input-group-btn
                    button.btn.btn-primary(type="button") Go!
            .card.my-4
              h5.card-header Tags
              .card-body
                .list-group
                  each item in h.menu
                    a(href=`/tags/${item}`).list-group-item.list-group-item-action= item
            .card.my-4
              h5.card-header Side Widget
              .card-body
                p Put something here,image or ads

    block footer
      footer.py-5.bg-dark.footer
        .container
          p.m-0.text-center.text-white Copyright &copy; akinmaurice 2017

